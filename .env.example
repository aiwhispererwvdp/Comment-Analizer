# API Keys - Replace with your actual API keys
# IMPORTANT: Never commit the actual .env file to version control
OPENAI_API_KEY=your_openai_api_key_here

# Optional API Keys (uncomment if using)
# AZURE_TEXT_ANALYTICS_KEY=your_azure_key_here
# AZURE_TEXT_ANALYTICS_ENDPOINT=your_azure_endpoint_here
# GOOGLE_APPLICATION_CREDENTIALS=path_to_google_credentials.json

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Analysis Settings
PRIMARY_LANGUAGE=es
SECONDARY_LANGUAGE=gn
BATCH_SIZE=100
MAX_RETRIES=3

# Performance Settings
MAX_MEMORY_MB=1024
CACHE_ENABLED=True
CACHE_TTL_SECONDS=3600

# Security Settings
RATE_LIMIT_ENABLED=True
MAX_REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=30